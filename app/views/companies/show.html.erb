<div class="banner">
  <p> <%= image_tag @company.banner(:large) %></p>
</div>
<div class="container general">
  <div class="row descriptionlogo">
    <div class=" col-md-8">
      <h3><%= @company.name %><h3>
      <strong>Description:</strong>
      <p> <%= @company.description %></p>
      <p> <%= @company.addresses.first.street %></p>
      <p> <%= @company.addresses.first.zipcode %></p>
      <p> <%= @company.addresses.first.city %></p>
    </div>
    <div class=" col-md-4">
      <p> <%= image_tag @company.logo(:medium) %></p>
    </div>
  </div>
  <div class="row">
      <div class="mapbox" id="map" style='width: 100%; height:250px;'></div>
  </div>
  <div class="row">
    <div class="col-md-12 col-md-offset-1 buttons">
    <%= link_to 'Back', companies_path, :class => 'btn btn-primary btn-md buttonsearch'  %>
    <%= link_to 'Voir la campagne', company_campaign_path(@company, @company.campaigns.last), :class => 'btn btn-primary btn-md'  %>
    </div>
  </div>
</div>

<% content_for(:js) do %>
  <script type="text/javascript">
   $(document).on('ready', function() {
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: { }, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setZoom(12);
      });
    });
  </script>
<% end %>