<div class="row comment">
  <div class="col-md-1 avatar text-center">
    <%= image_tag avatar_for(comment.user), size: '48x48' %>
  </div>

  <div class="col-md-11 body">
    <div class="row info">
      <div class="col-md-12">
        Par <%= comment.user.full_name %> il y a <%= time_ago_in_words(comment.created_at) %>
      </div>
      <div class="col-md-12 comment-text">
        <%= comment.comment %>
      </div>
    </div>
  </div>
</div>